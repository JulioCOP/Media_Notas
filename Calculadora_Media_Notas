var nome = prompt("")
var notaDoPrimeiroBimestre= parseFloat(prompt("Digite o valor da 1º nota: "))
var notaDoSegundoBimestre= parseFloat(prompt("Digite o valor da 2º nota: "))
var notaDoTerceiroBimestre= parseFloat(prompt("Digite o valor da 3º nota: "))
var notaDoQuartoBimestre= parseFloat(prompt("Digite o valor da 4º nota: "))

var notaFinal= (notaDoPrimeiroBimestre + notaDoSegundoBimestre + notaDoTerceiroBimestre + notaDoQuartoBimestre)/4
var notaFixada = notaFinal.toFixed(2)

console.log("Bem vindo " + nome)
console.log(notaFixada)

if (notaFixada >= 6){
  console.log("PARABÉNS " + nome + ", VOCÊ FOI APROVADO");
}else if (notaFixada >=4 && notaFixada <6){
  console.log(nome + " VOCÊ FICOU PARA O" + " EXAME ESPECIAL");
}else{
  console.log("INFELIZMENTE" + nome + " VOCÊ FOI REPROVADO");
}
